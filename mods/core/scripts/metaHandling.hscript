function onEndSong()
{
    checkSaveData();
    LoadingState.loadAndSwitchCustomState('SongSelectState');
}

function checkSaveData()
{
    if (FlxG.save.data.hcData[curSong])
        return;

    FlxG.save.data.hcData[curSong] = true;
    trace('Cleared song "' + curSong + '"!');

    FlxG.save.flush();
}