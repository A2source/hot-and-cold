var screen;
var gameScreen;

var scrolling = false;

function postStart(song)
{
    game.camManager.snapToPos(550, 450);
    game.camManager.defaultZoom = 1;

    game.modchartTimers['wait for screen'] = FlxTimer.wait(1 / game.playbackRate, ()->
    {
        gameScreen = new FlxSprite(-200, -200).makeGraphic(FlxG.width * 2.6, FlxG.height * 2.2, 0xFF000000);
        gameScreen.alpha = 0;
        addSprite(gameScreen, BEHIND_NONE);
    });
    
    screen = new FlxSprite().makeGraphic(FlxG.width, FlxG.height, 0xFF000000);
    screen.cameras = [game.camHUD];
    add(screen);
}

function update(dt)
{
    if (!scrolling)
        return;

    game.camManager.currentPos.x += 217 * dt;
}

function stepHit(step)
{
    switch(step)
    {
        case 1:
            game.modchartTweens['cam zoom out'] = FlxTween.tween(game.camManager, {defaultZoom: 0.6}, 3 / game.playbackRate);
            game.modchartTweens['screen fade'] = FlxTween.tween(screen, {alpha: 0}, 3 / game.playbackRate);

        case 32:
            game.camManager.resume();

        case 288, 416, 481, 672:
            game.hscriptManager.callAll('onSpotlight', ['kofuku', true]);

        case 352, 448, 544:
            game.hscriptManager.callAll('onSpotlight', ['alice', true]);

        case 800:
            game.hscriptManager.callAll('onSpotlight', ['', false]);

        case 1048:
            game.camManager.snapToPos(game.camManager.currentPos.x, game.camManager.currentPos.y);

            game.modchartTweens['fade to portraits'] = FlxTween.tween(gameScreen, {alpha: 1}, 1 / game.playbackRate, {ease: FlxEase.expoIn});
            game.modchartTweens['move cam out'] = FlxTween.tween(game.camManager.currentPos, {x: game.camManager.currentPos.x + 700}, 1 / game.playbackRate, {ease: FlxEase.backIn, onComplete: (tween)->
            {
                scrolling = true;
            }});
    }
}